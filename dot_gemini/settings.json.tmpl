{
  "theme": "Dracula",
  "selectedAuthType": "oauth-personal",
  "preferredEditor": "vscode",
  "mcpServers": {
    "github": {
      "url": "https://api.githubcopilot.com/mcp/"
    },
    "notion": {
      "command": "npx",
      "args": [
        "-y",
        "@notionhq/notion-mcp-server"
      ],
      "env": {
        "NOTION_TOKEN": "{{ (bitwarden "item" "www.notion.so") | jq ".fields[] | select(.name == \"BearerForMCP\").value" | first }}"
      }
    },
    "mcp-obsidian": {
      "command": "npx",
      "args": [
        "-y",
        "mcp-obsidian",
        "{{ joinPath .chezmoi.homeDir "Documents/Obsidian Vault" -}}"
      ]
    }
  }
}
